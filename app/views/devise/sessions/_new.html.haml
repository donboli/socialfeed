%h2 
  = t('.already_got_an_account')
= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-inline' } do |f|
  .form-inputs.form-group
    .paddings
      .row
        .col-xs-6
          = f.input :email, required: false, autofocus: true, label: false, placeholder: User.human_attribute_name(:email), input_html: {class: 'form-control'}
        .col-xs-6
          = f.input :remember_me, as: :boolean, label: t('.remember_me'), input_html: {class: 'form-control checkbox'} if devise_mapping.rememberable?
      .row
        .col-xs-6
          = f.input :password, required: false, label: false, placeholder: User.human_attribute_name(:password), input_html: {class: 'form-control'}
        .col-xs-6
          = f.button :submit, t('.sign_in'), class: 'btn btn-default btn-primary'
          = render "devise/shared/links"
