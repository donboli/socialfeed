%h2 
  = t('.already_got_an_account')
= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-inline' } do |f|
  .form-inputs.form-group
    = f.input :email, required: false, autofocus: true, input_html: {class: 'form-control'}
    = f.input :password, required: false, input_html: {class: 'form-control'}
    = f.input :remember_me, as: :boolean, wrapper_html: {class: 'checkbox'} if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Sign in", class: 'btn btn-default'
= render "devise/shared/links"
