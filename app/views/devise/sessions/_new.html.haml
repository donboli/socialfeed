%h2 
  = t('.already_got_an_account')
= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-inline' } do |f|
  .form-inputs.form-group
    .row
      = f.input :email, required: false, autofocus: true, label_html: { class: 'col-xs-2' }, input_html: { class: 'form-control col-xs-4'}
      = f.input :remember_me, as: :boolean, label_html: { class: 'col-xs-2' }, input_html: { class: 'form-control col-xs-4 checkbox'} if devise_mapping.rememberable?
    .row
      = f.input :password, required: false, label_html: { class: 'col-xs-2' }, input_html: { class: 'form-control col-xs-4'}
      .col-xs-6
        = f.button :submit, "Sign in", class: 'btn btn-default'
        = render "devise/shared/links"
