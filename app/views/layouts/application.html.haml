!!!
%html
  %head
    %title Socialfeed
    = stylesheet_link_tag    "https://fontastic.s3.amazonaws.com/YN9AsVbeGCpXoa9jACAAXF/icons.css"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  %body
    - if notice
      = render 'layouts/notification', message: notice, type: 'info'
    - if alert
      = render 'layouts/notification', message: alert, type: 'danger'

    .main-container
      .container-fluid
        = render 'layouts/header'
        .row
          .col-xs-3
            = render 'layouts/aside', followings: @followings
          .col-xs-9
            #content
              = yield
        = render 'layouts/footer'

    = yield :bottom_js