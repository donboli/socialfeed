!!!
%html
  %head
    %title Socialfeed
    /[if lt IE 9]
    %script{src: "http://html5shim.googlecode/svn/trunk/html5.js", type: "text/javascript"}
    /[endif]
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  %body
    - if notice
      %p.notice
        = notice
    - if alert
      %p.alert
        = alert
    
    .main-container
      .container-fluid
        = render 'layouts/header'
        .row
          .col-xs-2
            = render 'layouts/aside'
          .col-xs-10
            %main
              = yield
        .row
          = render 'layouts/footer'

    = yield :bottom_js