!!!
%html
  %head
    %title Socialfeed
    /[if lt IE 9]
    %script{src: "http://html5shim.googlecode/svn/trunk/html5.js", type: "text/javascript"}
    /[endif]
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  %body
    - if notice
      %p.notice
        = notice
    - if alert
      %p.alert
        = alert
    
    .landing
      .container-fluid
        .row.brand
          .col-xs-12
            = image_tag "brand.svg", class: 'img-responsive'
            %p.text-center.lead
              = t('.keep_up_with_your_interests')
        .row
          .col-xs-8.col-xs-offset-2
            .box
              .row
                .col-xs-12
                  = render 'devise/registrations/new'
              .row
                .col-xs-12
                  = render 'devise/sessions/new'
          .col-xs-8.col-xs-offset-2
            .row.frames
              .col-xs-4
                .frame.pull-left
                  = image_tag "box.svg", class: 'img-responsive box-img'
                  .text-center
                    = t('.store_feeds_in_a_single_place')
              .col-xs-4
                .frame.center
                  = image_tag "newspaper.svg", class: 'img-responsive newspaper-img'
                  .text-center
                    = t('.stay_informed')
              .col-xs-4
                .frame.pull-right
                  = image_tag "crowd.svg", class: 'img-responsive crowd-img'
                  .text-center
                    = t('.share_with_others')

        .row
          = render 'layouts/footer'

    = yield :bottom_js