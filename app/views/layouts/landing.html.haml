!!!
%html
  %head
    %title Socialfeed
    /[if lt IE 9]
    %script{src: "http://html5shim.googlecode/svn/trunk/html5.js", type: "text/javascript"}
    /[endif]
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  %body
    - if notice
      %p.notice
        = notice
    - if alert
      %p.alert
        = alert
    
    .landing
      .container-fluid
        .row
          .col-xs-12
            .brand
              = image_tag "brand.svg", class: 'img-responsive'
            %p.text-center
              = t('.keep_up_with_your_interests')
        .row
          .col-xs-8.col-xs-offset-2.box
            .row
              = render 'devise/registrations/new'
            .row
              = render 'devise/sessions/new'
        .row
      #footer

    = yield :bottom_js