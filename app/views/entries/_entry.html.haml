.entry.js-entry.panel.panel-default{id: "id-#{entry.id}", class: read?(entry)}
  #headingOne.panel-heading{:role => "tab"}
    .panel-title
      %a.collapsed{"aria-controls" => "collapse#{entry.id}", "aria-expanded" => "true", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse#{entry.id}"}
        .row
          .col-xs-5
            .name.pull-left
              = truncated_name_with_tooltip entry.name, 45
          .col-xs-5
            %span.published-at
              = time_ago_in_words entry.published_at
            = '/'
            %span
              = link_to entry.feed.category, category_path(entry.feed.category), class: "#{'not-active' if @user}"
            = '/'
            %span
              = link_to entry.feed, feed_path(entry.feed), class: "#{'not-active' if @user}"
          .col-xs-2
            %span.js-read-link
              = read_link(entry)
            %span.js-favorite-link
              = favorite_link(entry)
          .col-xs-12
  .panel-collapse.collapse{"aria-labelledby" => "headingOne", :role => "tabpanel", id: "collapse#{entry.id}"}
    .panel-body.summary
      = raw entry.summary
      = raw entry.content
      %br
      = link_to t('.view_website'), entry.url, target: '_blank'