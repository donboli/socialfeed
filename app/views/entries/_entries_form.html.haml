= search_form_for q, url: entries_path, builder: SimpleForm::FormBuilder do |f|
  .col-xs-3
    = f.input :feed_id_in, collection: feeds, multiple: true, required: false, label: false, input_html: {class: 'form-control'}
  .col-xs-2
    = f.input :read_eq, collection: [['read', true],['unread', false]], required: false, label: false, input_html: {class: 'form-control'}
  .col-xs-2
    = f.input :favorite_eq, collection: [['favorite', true],['not favorite', false]], required: false, label: false, input_html: {class: 'form-control'}
  .col-xs-1
    = hidden_field_tag :category, category._?.id
    %button.btn.icon
      h