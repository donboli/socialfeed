= search_form_for q, url: entries_path, builder: SimpleForm::FormBuilder do |f|
  .col-xs-3
    = f.input :feed_id_in, collection: feeds, required: false, placeholder: t('placeholders.all'), label: false, input_html: {class: 'form-control', multiple: true}
  .col-xs-2
    = f.input :read_eq, collection: [['read', true],['unread', false]], prompt: t('placeholders.all'), required: false, label: false, input_html: {class: 'form-control'}
  .col-xs-2
    = f.input :favorite_eq, collection: [['favorite', true],['not favorite', false]], prompt: t('placeholders.all'), required: false, label: false, input_html: {class: 'form-control'}
  .col-xs-1
    = hidden_field_tag :category, category._?.map(&:id)
    %button.btn.icon
      h